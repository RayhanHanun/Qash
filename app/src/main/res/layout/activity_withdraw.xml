<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/qash_primary"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarik Tunai"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_merchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Tempat Penarikan"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#757575"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_merchant"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:entries="@array/withdraw_merchants"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/lbl_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="Pilih Nominal Penarikan"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/card_merchant"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_selected_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:text="Rp 0"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/qash_primary"
        android:gravity="center"
        android:background="@drawable/bg_menu_icon"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_nominal"/>

    <GridLayout
        android:id="@+id/grid_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_amount">

        <Button
            android:id="@+id/btn_50k"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="50.000"
            android:textColor="@color/qash_primary"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/qash_primary"
            app:strokeWidth="1dp"/>

        <Button
            android:id="@+id/btn_100k"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="100.000"
            android:textColor="@color/qash_primary"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/qash_primary"
            app:strokeWidth="1dp"/>

        <Button
            android:id="@+id/btn_250k"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="250.000"
            android:textColor="@color/qash_primary"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/qash_primary"
            app:strokeWidth="1dp"/>

        <Button
            android:id="@+id/btn_500k"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="500.000"
            android:textColor="@color/qash_primary"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/qash_primary"
            app:strokeWidth="1dp"/>
    </GridLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:text="Konfirmasi Tarik Tunai"
        android:textStyle="bold"
        android:backgroundTint="@color/qash_primary"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>